<div class = "container">
  <div class = "row">
    <div class = "col-md-6 offset-md-3">
    <br><br><br>


<%= form_tag events_path, method: "post" do %>
  <div class="form-group">
      <%= label_tag 'Title' %>
      <%= text_field_tag 'title', "", class: 'form-control'  %>
      <br /> <br />
  </div>
  <div class="form-group">
      <%= label_tag 'Description' %>
      <%= text_area_tag 'description', "", class: 'form-control' %>
      <br /> <br />
  </div>
  <div class="form-group">
      <%= label_tag 'Prix' %>
      <%= number_field_tag 'price', "", class: 'form-control' %>
      <br /> <br />
  </div>
  <div class="form-group">
      <%= label_tag 'Ville' %>
      <%= text_area_tag 'location', "", class: 'form-control' %>
      <br /> <br />
  </div>
  <div class="form-group">
      <%= label_tag 'Date' %>
      <%= datetime_field_tag 'start_date', "", class: 'form-control' %>
      <br /> <br />
  </div>
  <div class="form-group">
      <%= label_tag 'Durée en minutes (veuillez choisir un multiole de 5)' %>
      <%= number_field_tag 'duration', "", class: 'form-control' %>
      <br /> <br />
  </div>
  <div class="form-actions">
      <%= submit_tag "Create Event", class: "btn btn-primary" %>
  </div>
<% end %>
<% if @event.errors.any? %>
  <div class="alert alert-danger" role="alert">
  <p>Nous n'avons pas réussi à créer l'event pour la (ou les) raison(s) suivante(s) :</p>
  <ul>
    <% @event.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>

</div>
</div>
</div>